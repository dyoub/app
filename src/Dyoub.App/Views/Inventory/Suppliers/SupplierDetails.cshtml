@using Dyoub.App.Helpers;

@{
    Layout = "~/Views/Layout.cshtml";
}

<div class="container" data-ng-controller="SupplierDetailsController as controller" data-ng-init="controller.init()">
    <div class="page-header" data-translate="Supplier details"></div>

    <div class="loading box" data-ng-show="controller.searching"></div>

    <div class="ng-cloak" data-ng-show="controller.searchComplete()">
        <div class="error" data-ng-show="controller.notFound">
            <i class="fa fa-exclamation-triangle"></i>
            <p data-translate="Supplier not found."></p>
            <a href="/suppliers" class="as-button" data-translate="Go back"></a>
        </div>

        <div data-ng-hide="controller.notFound">
            <div class="box">
                <a href="/suppliers" class="as-button">
                    <i class="fa fa-arrow-left"></i>
                </a>

                @using (Html.Authorize("suppliers.edit"))
                {
                    <a href="/suppliers/edit/{{controller.supplier.id}}" class="as-button" data-translate="Edit"></a>
                    <button type="button" class="danger" data-translate="Remove" data-ng-click="controller.showRemoveDialog()"></button>
                }
            </div>

            <div class="card">
                <div class="grid-row">
                    <div class="grid-column small-8 medium-8 large-8">
                        <div class="box">
                            <label data-translate="Name"></label>
                            <strong data-ng-bind="controller.supplier.name"></strong>
                        </div>
                    </div>
                    <div class="grid-column small-4 medium-4 large-4">
                        <div class="box">
                            <label data-translate="National ID"></label>
                            <strong data-ng-bind="controller.supplier.nationalId"></strong>
                            <strong data-ng-hide="controller.supplier.nationalId">-</strong>
                        </div>
                    </div>
                </div>

                <div class="grid-row">
                    <div class="grid-column small-4 medium-4 large-4">
                        <div class="box">
                            <label data-translate="Email"></label>
                            <strong data-ng-bind="controller.supplier.email"></strong>
                            <strong data-ng-hide="controller.supplier.email">-</strong>
                        </div>
                    </div>

                    <div class="grid-column small-4 medium-4 large-4">
                        <div class="box">
                            <label data-translate="Phone number"></label>
                            <strong data-ng-bind="controller.supplier.phoneNumber"></strong>
                            <strong data-ng-hide="controller.supplier.phoneNumber">-</strong>
                        </div>
                    </div>

                    <div class="grid-column small-4 medium-4 large-4">
                        <div class="box">
                            <label data-translate="Alternative phone number"></label>
                            <strong data-ng-bind="controller.supplier.alternativePhoneNumber"></strong>
                            <strong data-ng-hide="controller.supplier.alternativePhoneNumber">-</strong>
                        </div>
                    </div>
                </div>
            </div>

            <div class="list-header" data-translate="Social networks"></div>

            <div class="card">
                <div class="grid-row">
                    <div class="grid-column small-8 medium-8 large-8">
                        <div class="box">
                            <label data-translate="Homepage"></label>
                            <strong data-ng-bind="controller.supplier.homepage"></strong>
                            <strong data-ng-hide="controller.supplier.homepage">-</strong>
                        </div>
                    </div>
                    <div class="grid-column small-4 medium-4 large-4">
                        <div class="box">
                            <label data-translate="Facebook"></label>
                            <strong data-ng-bind="controller.supplier.facebook"></strong>
                            <strong data-ng-hide="controller.supplier.facebook">-</strong>
                        </div>
                    </div>
                </div>

                <div class="grid-row">
                    <div class="grid-column small-4 medium-4 large-4">
                        <div class="box">
                            <label data-translate="Instagram"></label>
                            <strong data-ng-bind="controller.supplier.instagram"></strong>
                            <strong data-ng-hide="controller.supplier.instagram">-</strong>
                        </div>
                    </div>

                    <div class="grid-column small-4 medium-4 large-4">
                        <div class="box">
                            <label data-translate="Twitter"></label>
                            <strong data-ng-bind="controller.supplier.twitter"></strong>
                            <strong data-ng-hide="controller.supplier.twitter">-</strong>
                        </div>
                    </div>

                    <div class="grid-column small-4 medium-4 large-4">
                        <div class="box">
                            <label data-translate="Google+"></label>
                            <strong data-ng-bind="controller.supplier.googlePlus"></strong>
                            <strong data-ng-hide="controller.supplier.googlePlus">-</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @using (Html.Authorize("suppliers.edit"))
    {
        @Html.Partial("~/Views/Inventory/Suppliers/_RemoveSupplier.cshtml")
    }
</div>
