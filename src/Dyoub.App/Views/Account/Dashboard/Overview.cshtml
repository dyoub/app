@{
    Layout = "~/Views/Layout.cshtml";
}

<div class="container" data-ng-controller="OverviewController as controller" data-ng-init="controller.load()">
    <div class="menu-header" data-translate="Account"></div>

    <div class="grid-row">
        <div class="grid-column compact-6 small-4 medium-4 large-3">
            <button type="button" data-href="/profile" class="card concrete" disabled>
                <div class="card-info">
                    <div data-ng-bind="controller.overview.user.email"></div>
                    <div class="value" data-ng-bind="controller.overview.user.name"></div>
                    <i class="fa fa-user-circle-o"></i>
                </div>
                <div class="card-title">
                    <span data-translate="My profile"></span>
                    <i class="fa fa-angle-right"></i>
                </div>
            </button>
        </div>

        <div class="grid-column compact-6 small-4 medium-4 large-3">
            <button type="button" data-href="/renewals" class="card concrete" disabled>
                <div class="card-info">
                    <div data-translate="Days for renewal"></div>
                    <div class="value" data-ng-bind="controller.overview.counter.daysForRenewal"></div>
                    <i class="fa fa-clock-o"></i>
                </div>
                <div class="card-title">
                    <span data-translate="Renewals"></span>
                    <i class="fa fa-angle-right"></i>
                </div>
            </button>
        </div>

        <div class="grid-column compact-6 small-4 medium-4 large-3">
            <button type="button" data-href="/tickets" class="as-button card concrete" disabled>
                <div class="card-info">
                    <div data-translate="New messages"></div>
                    <div class="value" data-ng-bind="controller.overview.counter.ticketMessages"></div>
                    <i class="fa fa-comment"></i>
                </div>
                <div class="card-title">
                    <span data-translate="Technical support"></span>
                    <i class="fa fa-angle-right"></i>
                </div>
            </button>
        </div>
    </div>

    <div class="menu-header" data-translate="Management"></div>

    <div class="grid-row">
        <div class="grid-column compact-6 small-4 medium-4 large-3">
            <button type="button" data-href="/stores" class="as-button card amethyst" disabled>
                <div class="card-info">
                    <div data-translate="Records"></div>
                    <div class="value" data-ng-bind="controller.overview.counter.stores"></div>
                    <i class="fa fa-home"></i>
                </div>
                <div class="card-title">
                    <span data-translate="Stores"></span>
                    <i class="fa fa-angle-right"></i>
                </div>
            </button>
        </div>

        <div class="grid-column compact-6 small-4 medium-4 large-3">
            <button type="button" data-href="/sales-team" class="card amethyst" disabled>
                <div class="card-info">
                    <div data-translate="Users"></div>
                    <div class="value" data-ng-bind="controller.overview.counter.professionals"></div>
