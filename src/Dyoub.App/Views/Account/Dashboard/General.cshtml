    <div class="menu-header">Dashboard</div>

    <div class="grid-row">
        <div class="grid-column medium-6 large-4">
            <a href="/dashboard/account" class="as-button card concrete">
                <div class="card-info">
                    <div data-translate="Profile"></div> 
                    <div data-translate="Renewals"></div> 
                    <div data-translate="Technical support"></div> 
                    <i class="fa fa-user-circle-o"></i>
                </div>
                <div class="card-title">
                    <span data-translate="Account"></span>
                    <i class="fa fa-angle-right"></i>
                </div>
            </a>
        </div>

        <div class="grid-column medium-6 large-4">
            <a href="/dashboard/management" class="as-button card amethyst">
                <div class="card-info">
                    <div data-translate="Stores"></div>
                    <div data-translate="Collaborators"></div>
                    <div data-translate="Teams"></div>
                    <i class="fa fa-users"></i>
                </div>
                <div class="card-title">
                    <span data-translate="Management"></span>
                    <i class="fa fa-angle-right"></i>
                </div>
            </a>
        </div>

        <div class="grid-column medium-6 large-4">
            <a href="/dashboard/catalog" class="as-button card primary">
                <div class="card-info">
                    <div data-translate="Products"></div>
                    <div data-translate="Services"></div>
                    <div data-translate="Pricing tables"></div>
                    <i class="fa fa-barcode"></i>
                </div>
                <div class="card-title">
                    <span data-translate="Catalog"></span>
                    <i class="fa fa-angle-right"></i>
                </div>
            </a>
        </div>

        <div class="grid-column medium-6 large-4">
            <a href="/dashboard/commercial" class="as-button card success">
                <div class="card-info">
                    <div data-translate="Customers"></div>
                    <div data-translate="Payment methods"></div>
                    <div data-translate="Sale orders"></div>
                    <div data-translate="Rentals"></div>
                    <i class="fa fa-shopping-cart"></i>
                </div>
                <div class="card-title">
                    <span data-translate="Commercial"></span>
                    <i class="fa fa-angle-right"></i>
                </div>
            </a>
        </div>

        <div class="grid-column medium-6 large-4">
            <a href="/dashboard/financial" class="as-button card emerald">
                <div class="card-info">
                    <div data-translate="Cash flow"></div>
