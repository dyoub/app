                <div class="card-title">
                    <span data-translate="Financial"></span>
                    <i class="fa fa-angle-right"></i>
                </div>
            </a>
        </div>

        <div class="grid-column medium-6 large-4">
            <a href="/dashboard/stock" class="as-button card carrot">
                <div class="card-info">
                    <div data-translate="Suppliers"></div>
                    <div data-translate="Products stock"></div>
                    <div data-translate="Purchase orders"></div>
                    <div data-translate="Transfer orders"></div>
                    <div data-translate="Other movements"></div>
                    <i class="fa fa-truck"></i>
                </div>
                <div class="card-title">
                    <span data-translate="Stock"></span>
                    <i class="fa fa-angle-right"></i>
                </div>
            </a>
        </div>
    </div>
</div>
